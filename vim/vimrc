" plugins
execute pathogen#infect()
filetype plugin indent on

" show me some colors
syntax on

" highlight search
set hlsearch

set autoread

" show line numbers
set number

" tabs
set ts=2
set sw=2
set softtabstop=2
set expandtab

" resolving backspace problem
set backspace=2

" map ^s :w
nnoremap <C-s> :w<cr>

au FileType php,sh,c,cpp,java set cindent autoindent
augroup filetype
    autocmd! BufRead,BufNewFile BUILD set filetype=blade
augroup end
