case "$OSTYPE" in
  darwin*)  OS='mac' ;; 
  linux*)   OS='linux' ;;
  *)        OS='default' ;;
esac

export PS1='\[\e[7m\]\u@\h:\w\$\[\e[0m\] '
export CLICOLOR=1
export EDITOR='vim'
export PATH="$HOME/bin:$PATH"

# Go
export PATH="/usr/local/go/bin:$PATH"
export GOPATH=$HOME/go
export PATH="$PATH:$GOPATH/bin"

alias mux='tmux'

if [[ "$OS" == 'mac' ]]; then
  alias vim='/usr/local/bin/vim'
  alias l='ls -CF'
fi

# vim mode
set -o vi

# clear
alias c='clear'

# ^s
stty -ixon
